# Temporal Configuration
TEMPORAL_ADDRESS=localhost:7233
TEMPORAL_TASK_QUEUE=cratedb-operations

# Kubernetes Configuration
K8S_CONTEXT=your-kubernetes-context
KUBECONFIG=/path/to/your/kubeconfig

# Logging Configuration
LOG_LEVEL=INFO

# Development Settings
PYTHONPATH=.
PYTHONDONTWRITEBYTECODE=1

# Optional: Override default timeouts (in seconds)
POD_READY_TIMEOUT=300
HEALTH_CHECK_TIMEOUT=300

# Optional: Worker Configuration
MAX_CONCURRENT_ACTIVITIES=10
MAX_CONCURRENT_WORKFLOWS=100

# Optional: Monitoring (if using monitoring features)
PROMETHEUS_PORT=8000
ENABLE_METRICS=false

# Optional: Security
# TEMPORAL_TLS_CERT_PATH=/path/to/cert.pem
# TEMPORAL_TLS_KEY_PATH=/path/to/key.pem
# TEMPORAL_TLS_CA_PATH=/path/to/ca.pem
